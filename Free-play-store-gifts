      background: conic-gradient(
        #aaffb8 0deg 45deg, #e5ffe8 45deg 90deg,
        #aaffb8 90deg 135deg, #e5ffe8 135deg 180deg,
        #aaffb8 180deg 225deg, #e5ffe8 225deg 270deg,
        #aaffb8 270deg 315deg, #e5ffe8 315deg 360deg
      );
